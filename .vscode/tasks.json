{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make-all",
            "type": "shell",
            "osx": {
                "command": "make all"
            },
            "linux": {
                "command": "make all"
            },
            "options": {
                "cwd": "./build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make-clean-all",
            "type": "shell",
            "osx": {
                "command": "make clean all"
            },
            "linux": {
                "command": "make clean all"
            },
            "options": {
                "cwd": "./build"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}